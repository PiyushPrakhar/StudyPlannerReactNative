<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/assignment_row_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="1"
            android:textSize="20dp"
            style="@style/recycler_cards_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/assignment_row_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="Domain manager"
                    style="@style/recycler_cards_header"/>

                <RelativeLayout
                    android:id="@+id/recycler_row_completed_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">

                    <ImageView
                        android:id="@+id/recycler_assignment_completed_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/assignment_row_completed_text"
                        android:layout_alignLeft="@+id/assignment_row_completed_text"
                        android:layout_marginStart="-29dp"
                        android:layout_marginLeft="-29dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/outline_check_circle_black_18" />

                    <TextView
                        android:id="@+id/assignment_row_completed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="completed"
                        android:textSize="14dp"
                        style="@style/recycler_cards_text"/>

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/assignment_row_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:textSize="14dp"
                android:text="Deadline : 02 / 04 / 2019"
                style="@style/recycler_cards_text"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>